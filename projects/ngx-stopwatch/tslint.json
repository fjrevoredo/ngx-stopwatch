{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "lib",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "lib",
      "kebab-case"
    ],
    "typedef": [true, "call-signature", "parameter", "member-variable-declaration", "variable-declaration"],
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "max-line-length": {
      "options": {"limit": 300}
    }
  }
}
